<div class="sidenav">
  <div class="login-main-text">
    <h2><code>COFFEE</code> and <code>CODE</code><br> GitHub</h2>
    <p>Faça o login e procure por um usuario</p>
  </div>
</div>
<div class="main">

  <div class="col-md-6 col-sm-12">
    {{#each errors}}

    <div class="alert alert-danger">{{text}}</div>

    {{else}}

    {{/each}}
    <div class="login-form">
      <form action="/login" method="POST">
        <div class="form-group">
          <label>Nome de Usuario</label>
          <input type="text" class="form-control" name="username" placeholder="Nome de Usuário">
        </div>
        <div class="form-group">
          <label>Senha</label>
          <input type="password" class="form-control" name="pass" placeholder="Senha">
        </div>
        <div class="mt-3">
          <button type="submit" class="btn btn-black">Entrar</button>
          <a href="/cadastro" type="button" class="btn btn-secondary">Registrar</a>
        </div>
      </form>
    </div>
  </div>
</div>